---
const { title = "Заголовок" } = Astro.props;
---

<div class="wrapper">
    <div class="page-title container">
        <h1>{title}</h1>
    </div>
</div>


<style>
    .wrapper {
        background-color: var(--color-gray);
        padding-block: 55px;
    }
    .page-title {
        h1 {
            font-family: "Yeseva One", serif;
            text-align: center;
        }
    }
</style>
