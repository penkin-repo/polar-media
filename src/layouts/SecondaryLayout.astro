---
import Header from "../components/SecondaryHeader.astro";
import Footer from "../components/Footer.astro";
import PagesTitle from "../components/PagesTitle.astro";

import "../styles/global.css";
const { title = "Типография Архангельск", pageTitle = "Заголовок не задан" } = Astro.props;
---

<!doctype html>
<html lang="ru" data-theme="light" class="modal-is-opening">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="color-scheme" content="light dark"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>

    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Yeseva+One&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <script
      src="https://kit.fontawesome.com/4f2fbbed78.js"
      crossorigin="anonymous"></script>
  </head>
  <body>
    <Header />
    <main>
      <PagesTitle title={pageTitle} />
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
    main {
        padding: 0;
    }
</style>

<script>
  // @ts-ignore
  import PhotoSwipeLightbox from '/node_modules/photoswipe/dist/photoswipe-lightbox.esm.js';

  const lightbox = new PhotoSwipeLightbox({
      gallery: '#gallery--getting-started',
      children: 'a',
      // @ts-ignore
      pswpModule: () => import('/node_modules/photoswipe/dist/photoswipe.esm.js'),
  });

  lightbox.init();
</script>
